@model IEnumerable<Project.Models.Menu>

@{
	ViewData["Title"] = "MenuIndex";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Menu Items</h1>
<a class="btn btn-primary" asp-action="Create">Create Item</a>

<hr />
<div class="container">
	<div class="row">
		@foreach (var i in Model)
{
		<div class="col-md-4 mt-2">
		<div class="card shadow" style="width: 18rem;">
		<img src="@Html.DisplayFor(modelItem=> i.ImageUrl)" class="card-img-top" alt="Image of Item">
		<div class="card-body">
			<h5 class="card-title">@Html.DisplayFor(modelItem => i.Name)</h5>
			<p class="card-text">@Html.DisplayFor(modelItem=>i.Price) </p>
			<a class="btn btn-primary" asp-action="Edit" asp-controller="Menu" asp-route-id="@i.ItemId">Edit</a>
			<a class="btn btn-danger" asp-action="Delete" asp-controller="Menu" asp-route-id="@i.ItemId">Delete</a>
		</div>
		</div>
	</div>
}</div>

</div>
